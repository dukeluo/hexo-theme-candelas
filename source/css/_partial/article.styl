.article
  margin: block-margin 0

.article-inner
  @extend $block
  overflow: hidden

.article-meta
  clearfix()

.article-date
  @extend $block-caption
  float: left

.article-category
  float: left
  line-height: 1em
  color: #ccc
  text-shadow: 0 1px #fff
  margin-left: 8px
  &:before
    content: "\2022"

.article-category-link
  @extend $block-caption
  margin: 0 12px 1em

.article-header
  padding: article-padding article-padding 0

.article-title
  color: card-title-color
  text-decoration: none
  font-size: 2em
  line-height: line-height-title
  transition: color 0.2s
  a&:hover
    color: card-highlight-color

.article-entry
  @extend $base-style
  clearfix()
  color: card-text-color
  padding: 0 article-padding
  p, table
    line-height: line-height
    margin: line-height 0
  h1, h2, h3, h4, h5, h6
    line-height: line-height-title
    margin: line-height-title 0
  a
    color: card-highlight-color
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    border-bottom: 3px solid grey-color
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid grey-color
    padding: 10px 0
  blockquote
    font-family: font-serif
    font-size: 1.4em
    margin: line-height 20px
    text-align: center
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

.article-more-link a
  display: inline-block
  line-height: 1em
  padding: 6px 15px
  border-radius: 15px
  background: grey-color
  color: link-color
  &:hover
    background: card-highlight-color
    color: #fff
    text-decoration: none

.article-footer
  clearfix()
  line-height: line-height
  border-top: 1px solid grey-color
  padding-top: line-height
  margin: 0 article-padding article-padding
  a
    color: card-title-color
    text-decoration: none

.article-tag-list:before
  font-family: font-icon
  content:'\f02c'
  display: inline-block
  margin-right: 10px
  vertical-align: middle
  font-size: 1.5rem
  color: link-color

.article-tag-list-item
  display: inline-block
  margin-right: 1rem
  font-size: 1.1rem

  &:hover
    font-weight: bold
    transform: translateY(-3px)

.article-tag-list-link
  display: inline-block
  background-color: card-highlight-color
  border-radius: 0 4px 4px 0
  height: 2rem
  line-height: 2rem
  padding: 0 1.4rem 0 1.2rem
  position: relative

  &:after
    content: ""
    background: grey-color
    border-radius: 6px
    height: 6px
    width: 6px
    position: absolute
    right: 10px
    top: calc(50% - 3px)

  &:before
    background-color: card-background-color
    border-bottom: 1rem solid transparent
    border-top 1rem solid transparent
    border-right: 0.8rem solid card-highlight-color
    content: ""
    position: absolute
    left: 0
    top: 0

.article-comment-link
  float: right
  &:before
    content: "\f075"
    font-family: font-icon
    padding-right: 8px

.article-gallery
  background: #000
  position: relative

.article-gallery-photos
  position: relative
  overflow: hidden

.article-gallery-img
  display: none
  max-width: 100%
  &:first-child
    display: block
  &.loaded
    position: absolute
    display: block
  img
    display: block
    max-width: 100%
    margin: 0 auto
